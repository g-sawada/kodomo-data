{
  "name": "app",
  "private": true,
  "dependencies": {
    "@hotwired/stimulus": "^3.2.2",
    "@hotwired/turbo-rails": "^8.0.4",
    "@types/recharts": "^1.8.29",
    "autoprefixer": "^10.4.19",
    "daisyui": "^4.10.4",
    "esbuild": "^0.20.2",
    "postcss": "^8.4.38",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "recharts": "^2.12.6",
    "tailwindcss": "^3.4.3"
  },
  "scripts": {
    "start": "bin/rails server -p $PORT -e production",
    "build": "esbuild app/javascript/*.* --bundle --sourcemap --format=esm --outdir=app/assets/builds --public-path=/assets",
    "build:custom": "esbuild app/javascript/react/entrypoints/*.* --bundle --sourcemap --format=esm --outdir=app/assets/builds --public-path=/assets",
    "build:css": "tailwindcss -i ./app/assets/stylesheets/application.tailwind.css -o ./app/assets/builds/application.css --minify",
    "heroku-postbuild": "yarn run build && yarn run build:custom"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.24.1",
    "@types/node": "^20.12.8",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.0",
    "typescript": "^5.4.5"
  }
}
